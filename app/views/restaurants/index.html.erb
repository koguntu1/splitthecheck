<div class="row">
  <div class="col-sm-6">
    <h1>Restaurants</h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-9">
    <%= form_for :restaurant, url: search_path, html: { class: "form-inline" } do |f| %>
        <div class="form-group">
          <%= f.text_field :name, value: params[:restaurant].try(:[], :name), class: 'form-control', placeholder: 'Search by Name' %>
        </div>
        <div class="form-group">
          <%= f.text_field :address, value: params[:restaurant].try(:[], :address), class: 'form-control', placeholder: 'Search by Address' %>
        </div>
        <div class="form-group">
          <%= f.text_field :city, value: params[:restaurant].try(:[], :city), class: 'form-control', placeholder: 'Search by City' %>
        </div>
        <%= f.submit 'Search', class: 'btn btn-default' %>
        <%= link_to 'Reset', restaurants_url, class: 'btn btn-default' %>
    <% end %>
  </div>
  <div class="col-sm-3">
    <%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-default pull-right', style: 'margin-top: 14px' %>
  </div>
</div>
<br/>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <% if user_signed_in? %>
          <th>Upvote</th>
          <th>Downvote</th>
    <% end %>
      <th>Up/Down -- Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.city %></td>
        <% if user_signed_in? %>
            <td><%= button_tag :upvote, value: 'upvote', id: restaurant.id, class: 'upvote'  %></td>
            <td><%= button_tag :downvote, value: 'downvote', id: restaurant.id, class: 'downvote'  %></td>
      <% end %>
        <td>
          <span class="<%= restaurant.id %>_up"><%= restaurant.upvote %></span>|
          <span class="<%= restaurant.id %>_down"><%= restaurant.downvote %></span>|
          <span class="<%= restaurant.id %>_total"><%= restaurant.upvote.to_i - restaurant.downvote.to_i %></span>
        </td>
        <td><%= link_to 'Show', restaurant, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<script language="JavaScript" type="text/javascript"></script>
<script>
    $(".upvote").click(function () {
      var upvote = $(this).attr("id");
      $.ajax({
        url: 'restaurants/' + $(this).attr("id"),
        type: 'patch',
        data: {'restaurant' : {'upvote' : parseInt($('.' + $(this).attr("id") + '_up').text()) + 1} },
        dataType: 'json',
        success: function(data){
          $('.' + upvote + '_up').text(data.upvote);
          $('.' + upvote + '_down').text(data.downvote);
          $('.' + upvote + '_total').text(data.upvote - data.downvote);
        }
      })
    });
    $(".downvote").click(function () {
      var upvote = $(this).attr("id");
      $.ajax({
        url: 'restaurants/' + $(this).attr("id"),
        type: 'patch',
        data: {'restaurant' : {'downvote' : parseInt($('.' + $(this).attr("id") + '_down').text()) + 1 } },
        dataType: 'json',
        success: function(data){
          $('.' + upvote + '_up').text(data.upvote);
          $('.' + upvote + '_down').text(data.downvote);
          $('.' + upvote + '_total').text(data.upvote - data.downvote);
        }
      })
    });
</script>