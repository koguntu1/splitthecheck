<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-sm-6">
    <h1>Restaurants</h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-9">
    <%= form_for :restaurant, url: search_path, html: { class: "form-inline" } do |f| %>
        <div class="form-group">
          <%= f.text_field :name, value: params[:restaurant].try(:[], :name), class: 'form-control', placeholder: 'Search by Name' %>
        </div>
        <div class="form-group">
          <%= f.text_field :address, value: params[:restaurant].try(:[], :address), class: 'form-control', placeholder: 'Search by Address' %>
        </div>
        <div class="form-group">
          <%= f.text_field :city, value: params[:restaurant].try(:[], :city), class: 'form-control', placeholder: 'Search by City' %>
        </div>
        <%= f.submit 'Search', class: 'btn btn-default' %>
        <%= link_to 'Reset', restaurants_url, class: 'btn btn-default' %>
    <% end %>
  </div>
  <div class="col-sm-3">
    <%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-default pull-right', style: 'margin-top: 14px' %>
  </div>
</div>
<br/>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Upvote</th>
      <th>Downvote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.upvote.to_i %></td>
        <td><%= restaurant.downvote.to_i %></td>
        <td><%= link_to 'Show', restaurant, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>